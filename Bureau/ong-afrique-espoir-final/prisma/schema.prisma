// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Action {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  icon        String   // Name of the Lucide icon (Used for Homepage)
  color       String   // Color theme (green, blue, yellow) (Used for Homepage)
  image       String?  // URL of the image (Used for Actions Page)
  date        String?  // e.g. "Juin 2025" or "En cours"
  location    String?  // e.g. "Nord Bénin"
  category    String?  // e.g. "Éducation", "Environnement"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  passwordHash  String
  name          String
  role          String  @default("moderator") // super_admin, moderator
  isActive      Boolean @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

